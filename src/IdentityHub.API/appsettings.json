{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "IdentityHub": "Information"
    }
  },
  "AllowedHosts": "*",
  "EntraId": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<your-tenant-id>",
    "ClientId": "<your-client-id>",
    "ClientSecret": "",
    "Audience": "api://<your-client-id>",
    "UseManagedIdentity": false,
    "GraphApiScopes": ["https://graph.microsoft.com/.default"]
  },
  "Authorization": {
    "GroupToRoleMapping": {
      "Global-Admins": "Admin",
      "Support-Team": "SupportAgent",
      "Engineering-Team": "Developer",
      "Finance-Team": "Billing",
      "Customers": "Customer"
    },
    "RolePermissions": {
      "Admin": [
        "users.*",
        "groups.*",
        "roles.*",
        "documents.*",
        "tickets.*",
        "settings.*",
        "audit.*"
      ],
      "SupportAgent": [
        "tickets.view.all",
        "tickets.create",
        "tickets.update",
        "tickets.assign",
        "tickets.close",
        "tickets.comment",
        "users.read"
      ],
      "Developer": [
        "documents.read",
        "documents.create",
        "documents.update",
        "code.commit",
        "code.review",
        "deployments.view"
      ],
      "Billing": [
        "billing.*",
        "invoices.*",
        "payments.view",
        "users.read",
        "audit.view"
      ],
      "Customer": [
        "tickets.create",
        "tickets.view.own",
        "tickets.comment",
        "documents.read",
        "profile.update",
        "billing.view"
      ]
    }
  }
}
