{
  "Authorization": {
    "GroupToRoleMapping": {
      "IdentityHub-Admins": "Admin",
      "IdentityHub-Support": "SupportAgent",
      "IdentityHub-Developers": "Developer",
      "IdentityHub-Customers": "Customer"
    },
    "RolePermissions": {
      "Admin": ["identity.*", "authorization.*"],
      "SupportAgent": [
        "identity.read",
        "authorization.check",
        "authorization.permissions.view"
      ],
      "Developer": ["identity.read", "authorization.check"],
      "Customer": ["identity.read"]
    }
  },
  "AuthorizationPolicies": {
    "PermissionPolicies": {
      "CanViewIdentity": "identity.read",
      "CanManageIdentity": "identity.manage",
      "CanCheckPermissions": "authorization.check",
      "CanViewPermissions": "authorization.permissions.view",
      "CanManageAuthorization": "authorization.manage"
    },
    "RolePolicies": {
      "RequireAdmin": "Admin",
      "RequireSupportAgent": "SupportAgent",
      "RequireAdminOrAgent": "Admin,SupportAgent"
    },
    "ContextPolicies": {
      "AdminAccessDuringBusinessHours": {
        "Roles": ["Admin"],
        "Permissions": ["authorization.manage"],
        "TimeRestriction": {
          "DaysOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "StartTime": "08:00:00",
          "EndTime": "18:00:00",
          "TimeZone": "America/New_York"
        },
        "RequiresMfa": true
      },
      "TenantIsolatedAdmin": {
        "Roles": ["Admin"],
        "Permissions": ["identity.*", "authorization.*"],
        "RequireTenant": true,
        "RequiresMfa": true
      },
      "HighPrivilegeOperation": {
        "Roles": ["Admin"],
        "Permissions": ["authorization.manage"],
        "RequiresMfa": true,
        "CustomClaims": {
          "department": "IT",
          "clearance_level": "high"
        }
      }
    }
  }
}
